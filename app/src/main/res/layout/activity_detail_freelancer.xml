<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.ui.detail.freelancer.DetailFreelancerActivity"
    android:theme="@style/Theme.Kerjamin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_freelancer"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_username"
        style="@style/TextContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/name2"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_freelancer" />

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_specialist"
            style="@style/cardView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@color/grey_100"
            android:orientation="vertical"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_username">

            <TextView
                android:id="@+id/specialist"
                style="@style/TextContent.Small.Grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/specialist"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_specialist"
                style="@style/TextContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:text="@string/specialist2" />
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/cardView"
        android:id="@+id/layout_skill"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/grey_100"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_specialist">

        <TextView
            android:id="@+id/skill"
            android:textSize="11sp"
            style="@style/TextContent.Small.Grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/skill" />

        <TextView
            android:id="@+id/tv_skill"
            style="@style/TextContent"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="@string/skill2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/cardView"
        android:id="@+id/layout_adress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/grey_100"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_skill">

        <TextView
            android:id="@+id/adress"
            android:textSize="11sp"
            style="@style/TextContent.Small.Grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/adress" />

        <TextView
            android:id="@+id/tv_adress"
            style="@style/TextContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:text="@string/adress2" />
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_distance"
            style="@style/cardView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/grey_100"
            android:orientation="vertical"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_adress">

            <TextView
                android:id="@+id/distance"
                style="@style/TextContent.Small.Grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/distant_free"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_distance"
                style="@style/TextContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:text="@string/distant_free2" />
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/cardView"
        android:id="@+id/layout_gender"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="16dp"
        android:background="@color/grey_100"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_distance">

        <TextView
            android:id="@+id/gender"
            android:textSize="11sp"
            style="@style/TextContent.Small.Grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/jenis_kelamin" />

        <TextView
            android:id="@+id/tv_gender"
            style="@style/TextContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:text="@string/jenis_kelamin2"/>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_rating"
            style="@style/cardView"
            android:layout_width="108dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:background="@color/grey_100"
            android:orientation="horizontal"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_user"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_rating"
                style="@style/TextContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="@string/rating2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_rating" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/span1"
            style="@style/cardView"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@color/grey_100"
            android:backgroundTint="@color/blue"
            android:orientation="horizontal"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_gender">

            <TextView
                android:id="@+id/tv_span1"
                style="@style/TextContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="@string/span1" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/span2"
            style="@style/cardView"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/grey_100"
            android:backgroundTint="@color/blue"
            android:orientation="horizontal"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/span1"
            app:layout_constraintTop_toBottomOf="@+id/layout_gender">

            <TextView
                android:id="@+id/tv_span2"
                style="@style/TextContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="@string/span2" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/span3"
            style="@style/cardView"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey_100"
            android:backgroundTint="@color/blue"
            android:orientation="horizontal"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/span1">

            <TextView
                android:id="@+id/tv_span3"
                style="@style/TextContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="@string/span3" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/span4"
            style="@style/cardView"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/grey_100"
            android:backgroundTint="@color/blue"
            android:orientation="horizontal"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/span3"
            app:layout_constraintTop_toBottomOf="@+id/span2">

            <TextView
                android:id="@+id/tv_span4"
                style="@style/TextContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="@string/span4" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_order"
            style="@style/ButtonPrimary"
            android:layout_marginTop="50dp"
            android:text="@string/form"
            android:textAppearance="@style/TextContent"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/span3" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>