<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kerjamin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextHeader">
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
    </style>

    <style name="TextTittle">
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextTittle.Small">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="TextContent">
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextContent.Small">
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>

    </style>

    <style name="TextContent.Form">
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextContent.Small.Grey">
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="TextReallySmall">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="ButtonPrimary">

        <item name="android:layout_width">261dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="ButtonSecondary">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Button">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:background">@drawable/button2</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="card">
        <item name="cardBackgroundColor">@color/blue_darker</item>
    </style>

    <style name="tab">
        <item name="tabBackground">@color/white</item>
    </style>

    <style name="cardView">
        <item name="android:strokeColor">@color/grey_100</item>
        <item name="android:radius">10dp</item>
    </style>

    <style name="frame">
        <item name="android:background">@color/grey_100</item>
        <item name="strokeColor">@color/white</item>
    </style>

</resources>